/* 옵션별 체크박스 */
.ArryOP {
    position: relative;
    display: inline-block;
}

.downdrop {
	display: none;
    position: absolute;
    background-color: #fff;
    min-width: 250px;
    box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
    padding: 16px;
    border-radius: 8px;
    z-index: 1;
    border: 1px solid #ddd;
    width: 340px;
}

.checkbox-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
}

.hrline {
    border-top: 1px solid #ddd;
    margin: 10px 0;
}

.chText {
    grid-column: 1 / span 2;
    font-weight: bold;
    margin-bottom: 10px;
}
.chText  p{
	font-size: 0.875rem;
	margin: 5px;
}

label {
    display: flex;
    align-items: center;
    font-size: 0.875rem;
    cursor: pointer;
}

label input {
    margin-right: 8px;
    width: 15px;
    height: 15px;

}

.apply-btn {
    display: block;
    padding: 8px 16px;
    background-color: #00d8a1;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    margin-left: 210px;
}

.apply-btn:hover {
    background-color: #00c490;
}

.downdrop.show {
    display: block;
}


/*정렬 버튼*/
.trigger-btn {
    padding: 5px 5px;
    background-color: white;
    border: 1px solid #ddd;
    border-radius: 20px;
    cursor: pointer;
    align-items: center;
    margin: 5px;
    width: 130px;
}

