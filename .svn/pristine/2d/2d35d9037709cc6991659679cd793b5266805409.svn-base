@charset "UTF-8";

* {
	font-family: pretendard;
}

.search {
	display: flex;
	align-items: center;
	margin-bottom: 20px;
	justify-content: center;
/* 	margin-top: 5px; */
}

.search input[type="text"] {
	width: 91%;
	padding: 13px;
	padding-left: 20px;
	font-size: 16px;
	border: 1px solid #ddd;
	border-radius: 5px;
	box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
}

.search button {
	padding: 10px 20px;
	background-color: white;
	border: 1px solid #24D59E; /*민트*/
	color: #1e1e1e;
	border-radius: 5px;
	cursor: pointer;
	margin-left: 20px;
	box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.search button:hover {
	background-color: #24D59E;
	color: white;
}

.search button.alphabet-button  {
	padding: 2px;
	background: white;
	color: #232323;
	border: 1px solid #B5B5B5;
	width: 25px;
	height: 25px;
	font-size: 14px;
	margin-left: 5px;
	border-radius: 3px;
}
.AZSelect{
	font-size: 14px;
    overflow-y: auto;  
    width: 35px;       
    padding: 5px;     
    border: 1px solid #ccc; 
    border-radius: 5px; 
}
/* 전체 스크롤바 스타일 */
.AZSelect::-webkit-scrollbar {
    width: 5px; /* 스크롤바의 너비 설정 */
}

/* 스크롤바의 배경 스타일 */
.AZSelect::-webkit-scrollbar-track {
    background: #f1f1f1; /* 스크롤 트랙 색상 */
    border-radius: 5px; /* 트랙의 모서리 둥글게 설정 */
}

/* 스크롤바의 막대 스타일 */
.AZSelect::-webkit-scrollbar-thumb {
    background: #c1c1c1; 
    border-radius: 5px; 
}

/* 스크롤바의 막대에 마우스를 올렸을 때의 스타일 */
.AZSelect::-webkit-scrollbar-thumb:hover {
    background:#c1c1c1;
}



.search button.alphabet-button:hover {
   background: #ECECEC;
   border: 1px solid #B5B5B5;
}

.result {
	margin-top: 20px;
}

.resultCard {
	display: flex;
	justify-content: space-between;
	padding: 20px;
	background-color: #fff;
	border: 1px solid #ddd;
	border-radius: 10px;
	margin-bottom: 10px;
