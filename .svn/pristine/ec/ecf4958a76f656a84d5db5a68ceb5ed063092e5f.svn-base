@charset "UTF-8";
* {
    font-family: pretendard;
}
.pbancDetailContainer{
	margin-left: 180px;
}
.contentr{
	min-height: 3300px !important;
}
/* 채용 정보 헤더 */
.job-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.job-header h2 {
    color: #232323;
}
.up-del-btn{
	margin-right: 115px;
}
.action-buttons{
	display: flex;
	justify-content: center;
	margin-bottom: 70px;
}
/* 버튼 */
.btnUp {
   background: white;
   color: #24D59E;
   border: 1px solid #24D59E;
   padding: 8px 15px;
   margin-bottom: 10px;
   font-size: 16px;
   border-radius: 5px;
   cursor: pointer;
   width: 120px;
   height: 40px;
   transition: all 0.3s ease 0s;
}
.btnUp:hover {
   background-color: #24D59E;
   color: white;
}
.btnDel{
   background: white;
   color: #232323;
   border: 1px solid #B5B5B5;
   padding: 8px 15px;
   margin-bottom: 10px;
   font-size: 16px;
   border-radius: 5px;
   cursor: pointer;
   width: 120px;
   height: 40px;   
   transition: all 0.3s ease 0s;
}
.btnDel:hover {
   background: #ECECEC;
   border: 1px solid #B5B5B5;
}

.apply-btn {
   background: white;
   color: #24D59E;
   border: 1px solid #24D59E;
   padding: 8px 15px;
   margin-bottom: 10px;
   font-size: 18px;
   border-radius: 5px;
   cursor: pointer;
   width: 170px;
   height: 60px;
   transition: all 0.3s ease 0s;
}
.apply-btn:hover{
   background-color: #24D59E;
   color: white;
}		
.bookmark-btn {
   background: white;
   color: #232323;
   border: 1px solid #B5B5B5;
   padding: 8px 15px;
   margin-bottom: 10px;
   font-size: 18px;
   border-radius: 5px;
   cursor: pointer;
   width: 170px;
   height: 60px;
   margin-right: 10px;
   transition: all 0.3s ease 0s;
}

.bookmark-btn:hover {
   background: #ECECEC;
   border: 1px solid #B5B5B5;
}
.hr{
	border: 1px solid #b1b1b1;
	width: 1100px;
	margin-left: 0px;
}
.hrhr{
	border: 1px solid #dddddd;
	width: 1100px;
	margin-left: 0px;
}
.check-img{
	width: 45px;
	height: 45px;
}

/* 채용 정보 요약 */
.job-summary {
    margin-bottom: 20px;
}
h5{
	font-weight: 500;
	margin-left: 30px;
}
.summary{
	display: flex;
	width: 1100px;
}
.sum-img{
	border: 1px solid #e5e5e5;
	border-radius: 8px;
	width: 200px;
	height: 150px;
}

.form-group{
	width: 300px;
	margin-left: 30px;
	margin-right: 30px;
}
.form-group2{
	width: 240px;
	margin-left: 50px;
	margin-right: 30px;
}
.form-group3{
	width:600px;
	margin-left: 30px;
	margin-right: 10px;
}
.form-group4{
	display: flex;
	margin-top: 150px;
}
.left{
	font-size: 20px;
	margin-bottom: 20px;
	color: #232323;
	font-weight: 600;
	margin-top: 10px;
}
.left-2{
	display: flex;
}
.p-size-left{
	width: 100px;
}
.p-size-right{
	width: 200px;
	color: black;
}
.job-summary h4 {
    color: #232323;
    margin-bottom: 20px;
    margin-top: 5px;
    font-weight: 700;
    margin-left: 30px;
}

/* 탭 메뉴 */
.tab-menu {
    display: flex;
    justify-content: flex-start;
    margin-left: 5px;
}

.tab-btn {
    padding: 10px 20px;
    font-size: 16px;
    color: #333333;
    background-color: #ffffff;
    border: 1px solid #dddddd;
    border-radius: 4px 4px 0 0;
    cursor: pointer;
    margin-right: 5px; 
    transition: background-color 0.2s;
    border-bottom: 1px solid transparent;
}
.tab-btn:hover {
    background-color: #24D59E;
    color: #ffffff;
}

/* 상세 정보 섹션 */
.job-details {
    padding: 20px;
    border: 1px solid #dddddd;
    border-radius: 8px;
    width: 1100px;
    margin-bottom: 50px;
}
.job-det-h7{
	font-size: 24px;
	font-weight: 500;
	margin-top: 50px;
	margin-bottom: 20px;
}
.detail-content{
	margin-left: 50px;
	font-size: 16px;
}

.job-details p {
    font-size: 20px;
    color: #232323;
    margin-bottom: 15px;
    margin-left: 50px;
}

.job-details ul {
    margin-left: 20px;
    list-style: disc;
}

.job-details ul li {
    margin-bottom: 10px;
}
.all{
	display: flex;
	margin-top: 20px;
	width: 550px;
}
.com-det-cont{
	display: flex;
	justify-content: space-between;
}
.detail-ta{
	margin-left: 50px;
	font-size: 16px;
}
.detail-p{
	width: 180px;
	height: 40px;
	margin-top: 3px;
}
.input-detail{
	height: 40px;
	font-size: 16px;
}
.det-content{
	display: flex;
	height: 40px;
	margin-bottom: 15px;	
}
.con-flex{
	display: flex;
}
.con-right1{
	margin-left: 55px;
}
.con-right2{
	margin-left:280px;
}
.column1{
	display: flex;
	flex-direction: column;
	margin-left: 50px;
}
.company-img-header{
	width: 1060px;
	height: 1000px;	
	border-radius: 8px;
	position: relative;
}
.sum-flex{
	display: flex;
}
.company-img{
	width: 20px;
	height: 20px;
	margin-right: 5px;
}
.pro-btn, .pro-btn1{
	display: flex;
	margin-right: 20px;
}
.all-all{
	display: flex;
}