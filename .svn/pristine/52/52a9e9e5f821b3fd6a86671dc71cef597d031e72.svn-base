@charset "UTF-8";
* {
    font-family: pretendard;
}
.pbancDetailContainer{
	margin-left: 50px;
}
.contentr{
	height: 3300px !important;
}
/* 채용 정보 헤더 */
.job-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.job-header h2 {
    color: #232323;
}
.up-del-btn{
	margin-right: 45px;
}
.action-buttons{
	display: flex;
	justify-content: center;
	margin-bottom: 70px;
}
/* 버튼 */
.btnUp {
   background: white;
   color: #24D59E;
   border: 1px solid #24D59E;
   padding: 8px 15px;
   margin-bottom: 10px;
   font-size: 16px;
   border-radius: 5px;
   cursor: pointer;
   width: 120px;
   height: 40px;
   transition: all 0.3s ease 0s;
}
.btnUp:hover {
   background-color: #24D59E;
   color: white;
}
.btnDel{
   background: white;
   color: #232323;
   border: 1px solid #B5B5B5;
   padding: 8px 15px;
   margin-bottom: 10px;
   font-size: 16px;
   border-radius: 5px;
   cursor: pointer;
   width: 120px;
   height: 40px;   
   transition: all 0.3s ease 0s;
}
.btnDel:hover {
   background: #ECECEC;
   border: 1px solid #B5B5B5;
}

.apply-btn {
   background: white;
   color: #24D59E;
   border: 1px solid #24D59E;
   padding: 8px 15px;
   margin-bottom: 10px;
   font-size: 18px;
   border-radius: 5px;
   cursor: pointer;
   width: 170px;
   height: 60px;
   transition: all 0.3s ease 0s;
}
.apply-btn:hover{
   background-color: #24D59E;
   color: white;
}		
.bookmark-btn {
   background: white;
   color: #232323;
   border: 1px solid #B5B5B5;
   padding: 8px 15px;
   margin-bottom: 10px;
   font-size: 18px;
   border-radius: 5px;
   cursor: pointer;
   width: 170px;
   height: 60px;
   margin-right: 10px;
   transition: all 0.3s ease 0s;
}

.bookmark-btn:hover {
   background: #ECECEC;
   border: 1px solid #B5B5B5;
}
.pro-btn, .hp-btn {
   background: white;
   color: #232323;
   border: 1px solid #B5B5B5;
   padding: 8px 15px;
   margin-bottom: 10px;
   font-size: 16px;
   border-radius: 5px;
   cursor: pointer;
   width: 130px;
   height: 50px;
   margin-right: 10px;
   transition: all 0.3s ease 0s;
   text-align: center;
}

.pro-btn:hover, .hp-btn:hover {
   background: #ECECEC;
   border: 1px solid #B5B5B5;
}
.hr{
	border: 1px solid #b1b1b1;
	width: 1320px;
	margin-left: 0px;
}
.hrhr{
	border: 1px solid #dddddd;
	width: 1320px;
	margin-left: 0px;
}
.check-img{
	width: 45px;
	height: 45px;
}

/* 채용 정보 요약 */
.job-summary {
    margin-bottom: 20px;
}
h5{
	font-weight: 500;
	margin-left: 30px;
}
.summary{
	display: flex;
	justify-content: flex-start;
	width: 1320px;
}
.sum-img{
	border: 1px solid #e5e5e5;
	border-radius: 8px;
}

.form-group{
	width: 430px;
	margin-left: 30px;
	margin-right: 30px;
}
.form-group2{
	width: 240px;
	margin-left: 50px;
	margin-right: 30px;
}
.form-group3{
	width:600px;
	margin-left: 80px;
	margin-right: 10px;
}
.form-group4{
	width:240px;
	margin-left: 50px;
	margin-right: 30px;
		display: flex;
	justify-content: flex-end;
	margin-top: 180px;
}

.left{
	font-size: 20px;
	margin-bottom: 20px;
	color: #232323;
	font-weight: 600;
	margin-top: 10px;
}
.left-2{
	display: flex;
    margin-bottom: 5px; 
    justify-content: flex-start;
    
}
.p-size-left{
	width: 100px;
}
.p-size-right{
	width: 200px;
	color: black;
}
.job-summary h4 {
    color: #232323;
    margin-bottom: 20px;
    margin-top: 5px;
    font-weight: 700;
    margin-left: 30px;
}

/* 탭 메뉴 */
.tab-menu {
    display: flex;
    justify-content: flex-start;
    margin-left: 5px;
}

.tab-btn {
    padding: 10px 20px;
    font-size: 16px;
    color: #333333;
    background-color: #ffffff;
    border: 1px solid #dddddd;
    border-radius: 4px 4px 0 0;
    cursor: pointer;
    margin-right: 5px; 
    transition: background-color 0.2s;
    border-bottom: 1px solid transparent;
}
.tab-btn:hover {
    background-color: #24D59E;
    color: #ffffff;
}

/* 상세 정보 섹션 */
.job-details {
    padding: 20px;
    border: 1px solid #dddddd;
    border-radius: 8px;
    width: 1320px;
    margin-bottom: 50px;
}
.img-header{
	width: 1277px;
	height: 350px;	
	border-radius: 8px;
	opacity: 0.5;
	z-index: 1;
	position: relative;
}

.job-det-h5 {
    color: #232323;
    font-weight: bold;
    margin-bottom: 10px;
    margin-top: -230px !important;
    z-index: 999;
    position: relative;
    margin-left: 50px !important;
    font-size: 24px;
}

.job-det-h4 {
    color: #232323;
    font-weight: 800;
    margin-top: 20px;
    z-index: 999;
    position: relative;
    margin-left: 50px;
    font-size: 45px;
}
.job-det-h6{
	margin-top: 150px;
	font-size: 24px;
	font-weight: 500;
}
.job-det-h7{
	font-size: 24px;
	font-weight: 500;
	margin-top: 50px;
	margin-bottom: 20px;
}
.detail-content{
	margin-left: 50px;
}

.job-details p {
    font-size: 20px;
    color: #232323;
    margin-bottom: 15px;
    margin-left: 50px;
}

.job-details ul {
    margin-left: 20px;
    list-style: disc;
}

.job-details ul li {
    margin-bottom: 10px;
}
.all{
	display: flex;
	margin-top: 40px;
}
.com-det-cont{
	display: flex;
	justify-content: space-between;
}
.detail-ta{
	margin-left: 50px;
	font-size: 20px;
	overflow:hidden;
}
.detail-p{
	width: 180px;
	height: 40px;
	margin-top: 3px;
}
.input-detail{
	width: 500px;
	height: 40px;
}
.det-content{
	display: flex;
	height: 40px;
	margin-bottom: 15px;	
}