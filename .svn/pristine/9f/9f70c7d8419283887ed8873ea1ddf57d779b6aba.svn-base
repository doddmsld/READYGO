.page-link {
	color: black;
	border-radius: 7px;
	margin: 5px;
}
/* 버튼클릭했을 때! */
.page-item.active .page-link {
	z-index: 3;
	font-weight: 700;
	color: #24D59E;
	background-color: rgba(44, 207, 195, 0.11);
	border-radius: 7px;
}

.write_date {
	text-align: right;
}

.page-item.active .page-link {
	border-color: #dee2e6;
}

a.page-link:hover {
	color: #000000;
