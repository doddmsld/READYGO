	INSERT INTO SCRAP (PBANC_NO, MBR_ID)
	  VALUES(#{pbancNo},#{mbrId})
</insert>

<!-- 스크랩한 공고 삭제 -->
<delete id="delScrap" parameterType="map">
	DELETE 
	  FROM SCRAP
	 WHERE MBR_ID=#{mbrId}
	   AND PBANC_NO=#{pbancNo}
</delete>

<!-- 스크랩 여부 확인 -->
<select id="scrapYN" parameterType="map" resultType="int">
	SELECT PBANC_NO, MBR_ID
	  FROM SCRAP
	 WHERE MBR_ID=#{mbrId}
	   AND PBANC_NO=#{pbancNo}
</select>

