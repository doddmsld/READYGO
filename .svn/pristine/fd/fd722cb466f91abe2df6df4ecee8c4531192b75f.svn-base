@charset "UTF-8";
* {
    font-family: pretendard;
}
.pbancDetailContainer{
	margin-left: 180px;
}
.contentr{
	min-height: 3300px !important;
}
/* 채용 정보 헤더 */
.job-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.job-header h2 {
    color: #232323;
}
.up-del-btn{
	margin-right: 130px;
}
.action-buttons{
	display: flex;
	justify-content: center;
	margin-bottom: 70px;
}
/* 버튼 */
.btnUp, .btnsub {
   background: white;
   color: #24D59E;
   border: 1px solid #24D59E;
   padding: 8px 15px;
   margin-bottom: 10px;
   font-size: 16px;
   border-radius: 5px;
   cursor: pointer;
   width: 120px;
   height: 40px;
   transition: all 0.3s ease 0s;
}
.btnUp:hover, .btnsub:hover {
   background-color: #24D59E;
   color: white;
}
.btnDel, .btncan{
   background: white;
   color: #232323;
   border: 1px solid #B5B5B5;
   padding: 8px 15px;
   margin-bottom: 10px;
   font-size: 16px;
   border-radius: 5px;
   cursor: pointer;
   width: 120px;
   height: 40px;   
   transition: all 0.3s ease 0s;
}
.btnDel:hover, .btncan:hover {
   background: #ECECEC;
   border: 1px solid #B5B5B5;
}

.apply-btn {
   background: white;
   color: #24D59E;
   border: 1px solid #24D59E;
   padding: 8px 15px;
   margin-bottom: 10px;
   font-size: 18px;
   border-radius: 5px;
   cursor: pointer;
   width: 170px;
   height: 60px;
   transition: all 0.3s ease 0s;
}
.apply-btn:hover{
   background-color: #24D59E;
   color: white;
}		
.bookmark-btn, .top-btn  {
   background: white;
   color: #232323;
   border: 1px solid #B5B5B5;
   padding: 8px 15px;
   margin-bottom: 10px;
   font-size: 18px;
   border-radius: 5px;
   cursor: pointer;
   width: 170px;
   height: 60px;
   margin-right: 10px;
   transition: all 0.3s ease 0s;
}
.top-btn {
   width: 40px;
   height: 40px;
   padding: 4px;	
   font-size: 14px;
}
.bookmark-btn:hover,
.top-btn:hover {
   background: #ECECEC;
   border: 1px solid #B5B5B5;
}
.hr{
	border: 1px solid #b1b1b1;
	width: 1100px;
	margin-left: 0px;
}
.hrhr{
	border: 1px solid #dddddd;
	width: 1100px;
	margin-left: 0px;
}
.check-img{
	width: 45px;
	height: 45px;
}
.bookmark-btn.scrapped{
    background-color: #24D59E; /* 민트색 배경 */
    color: #ffffff; /* 흰색 글자 */
    border: none; /* 민트색 테두리 */	
}

/* 채용 정보 요약 */
.job-summary {
    margin-bottom: 20px;
}
h5{
	font-weight: 500;
	margin-left: 30px;
}
.summary{
	display: flex;
	width: 1100px;
}
.sum-img{
	border: 1px solid #e5e5e5;
	border-radius: 8px;
	width: 200px;
	height: 150px;
}

.form-group{
	width: 300px;
	margin-left: 30px;
	margin-right: 30px;
}
.form-group2{
	width: 240px;
	margin-left: 50px;
	margin-right: 30px;
}
.form-group3{
	width:600px;
	margin-left: 30px;
	margin-right: 10px;
}
.form-group4{
	display: flex;
	margin-top: 150px;
}
.left{
	font-size: 20px;
	margin-bottom: 20px;
	color: #232323;
	font-weight: 600;
	margin-top: 10px;
}
.left-2{
	display: flex;
}
.p-size-left{
