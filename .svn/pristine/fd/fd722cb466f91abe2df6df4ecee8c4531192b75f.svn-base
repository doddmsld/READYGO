/* 탭 메뉴 */
.tab-menu {
    display: flex;
    justify-content: flex-start;
    margin-left: 5px;
}

.tab-btn{
    padding: 10px 20px;
    font-size: 16px;
    color: #333333;
    background-color: #ffffff;
    border: 1px solid #dddddd;
    border-radius: 4px 4px 0 0;
    cursor: pointer;
    margin-right: 5px; 
    transition: background-color 0.2s;
    border-bottom: 1px solid transparent;
}
.tab-btn:hover {
    background-color: #24D59E;
    color: #ffffff;
}

