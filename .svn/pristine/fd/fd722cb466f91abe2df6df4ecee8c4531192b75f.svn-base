    color: #232323;
    margin-bottom: 15px;
    margin-left: 50px;
    font-weight: 500;
}

.job-details ul {
    margin-left: 20px;
    list-style: disc;
}

.job-details ul li {
    margin-bottom: 10px;
}
.all{
	display: flex;
	margin-top: 20px;
	width: 550px;
}
.com-det-cont{
	display: flex;
	justify-content: space-between;
}
.detail-ta{
	margin-left: 50px;
	font-size: 16px;
}
.detail-p{
	width: 180px;
	height: 40px;
	margin-top: 3px;
}
.input-detail{
	height: 40px;
	font-size: 16px;
}
.det-content{
	display: flex;
	height: 40px;
	margin-bottom: 15px;	
}
.con-flex{
	display: flex;
}
.con-right1{
	margin-left: 55px;
}
.con-right2{
	margin-left:280px;
}
.column1{
	display: flex;
	flex-direction: column;
