}

/* 기본 상태: input과 textarea 모두 테두리 없음 */
.input-detail, .detail-ta {
    border: none;
}

/* 수정 모드: input과 textarea 모두 테두리 있음 */
.input-active, .textarea-active {
    border: 1px solid #dddddd;
    border-radius: 8px;
    padding: 8px;
}
.hidden {
    display: none;
}
.can-sub-btn {
    display: none; /* 기본적으로 숨김 처리됨 */
}
.upload{
	display: flex;
	justify-content: flex-end;
}
#imageUpload{
	border: 1px solid #dddddd;
    border-radius: 8px;
    padding: 8px;
    margin-top: 10px;
}
.input-detail, .detail-ta {
    width: 220px; /* 박스가 부모 요소의 너비에 맞게 확장되도록 설정 */
    height: 40px; /* 높이를 동일하게 맞춤 */
    box-sizing: border-box; /* 패딩과 보더 크기를 포함하여 크기를 계산 */
    padding: 8px; /* 적절한 패딩 추가 */
    margin: 0; /* 마진 제거로 균등한 크기 */
    display: inline-block; /* 인풋과 셀렉트 박스를 같은 줄에 배치 */
    vertical-align: middle; /* 수직 정렬 */
}
#pbancCn, #pbancTtl{
	width: 800px;
	margin-left: 50px;
	font-size: 16px;
}
select.input-detail {
    -webkit-appearance: none; /* 기본 브라우저 스타일 제거 */
    -moz-appearance: none; /* 기본 브라우저 스타일 제거 */
    appearance: none; /* 기본 브라우저 스타일 제거 */
    background-position: right 10px center; /* 화살표 위치 설정 */
    background-repeat: no-repeat;
    width: 220px; /* 셀렉트 박스 너비 조정 */
}