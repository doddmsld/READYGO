@charset "UTF-8";
* {
    font-family: pretendard;
}
   
.container{
   margin-left: 500px;
   margin-top: 100px;
   
}
.left{
   display: flex;
   justify-content: space-around;
   
}
*, ::after, ::before {
    box-sizing: content-box;
}

/* form-group의 CSS 수정 */
.form-group {
    display: flex;
    align-items: center;
    margin-bottom: 12px; /* 각 input 그룹 사이의 간격 */
    margin-left : 30px;
}

.form-group label {
   font-size: 16px;
    color: #232323;
    margin-right: 40px;
    width: 150px; /* label의 고정 너비 설정 */
    text-align: left; /* label 텍스트를 오른쪽 정렬 */
}

.form-group input {
    flex: 1; /* input이 남은 공간을 차지하게 설정 */
    padding: 8px;
    border: 1px solid #666363;
    border-radius: 5px;
    box-sizing: border-box;
}

.col-left{
   margin-left : -50px;
   margin-right : 50px;
}

#entLogos{
    border-radius: 10px;
    height: 142px;
    width: 142px;
