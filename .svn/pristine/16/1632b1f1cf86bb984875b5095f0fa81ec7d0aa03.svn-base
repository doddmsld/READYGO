@charset "UTF-8";
* {
    font-family: pretendard;
}
body {
    background-color: #f9f9f9;
}
.search {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
    justify-content: center;
    margin-top: -30px;
}
.search input[type="text"] {
    width: 80%;
    padding: 13px; 
    padding-left: 20px;
    font-size: 16px;
    border: 1px solid #ddd;
    border-radius: 5px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}
.search button {
    padding: 10px 20px;
    background-color: white;
    border: 1px solid #24D59E; /*민트*/
    color: #1e1e1e;
    border-radius: 5px;
    cursor: pointer;
    margin-left: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}
.search button:hover {
	background-color: #24D59E;
    color: white;
}
.result {
    margin-top: 20px;
}
.resultCard {
    display: flex;
    justify-content: space-between;
    padding: 20px;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 10px;
    margin-bottom: 10px;
    width: 1225px;
 	margin-left: 95px;
 	box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}
.profile {
    display: flex;
    align-items: center;
}
.profile img {
    border-radius: 50%;
    width: 65px;
    height: 65px;
    margin-right: 20px;
    margin-top: -33px;
}
.profile-info {
    line-height: 1.5;
}
.profile-info .name {
    font-size: 18px;
    font-weight: bold;
}
.profile-info .details {
    color: #666;
    font-size: 14px;
}
.skills {
    margin-top: 10px;
}
.skill-badge {
    display: inline-block;
    background-color: #e0e0e0;
    border-radius: 5px;
    padding: 5px 10px;
    font-size: 12px;
    margin-right: 5px;
}
.actions {
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.actions button { 
     padding: 8px 15px;
     margin-bottom: 10px; 
     font-size: 14px;
     border-radius: 5px;
     cursor: pointer;
} 

.scout-button {
    background: white;
    color: #232323;
    border: 1px solid #24D59E;
}
.scout-button:hover {
    background-color: #24D59E;
    color: white;
}
.profileGo{
    background: white;
    color: #232323;
    border: 1px solid #B5B5B5;
}
.profileGo:hover{
    background: #ECECEC;
    border: 1px solid #B5B5B5;
}

.pagination {
    display: flex;
    justify-content: center;
    margin-top: 20px;
}
.pagination button {
    padding: 10px 15px;
    margin: 0 5px;
    border: 1px solid #ddd;
    background-color: #fff;
    border-radius: 5px;
    cursor: pointer;
}
.pagination button.active {
    background-color: #24D59E;;
    color: white;
}
.pagination button:hover {
    background-color: #ddd;
}
div.contentr {
    background-color: transparent !important; /* 모든 배경색 덮어쓰기 */
    height:500px !important; /* height를 1200px로 강제 설정 */
    min-height: 500px !important;
}
.wrapper {
    height: 953px !important;
}
.search {
/*     position: relative; */
}

.dropdown {
    display: none;
    position: absolute;
    top: 9.2%;
    left: 0;
    background-color: #f9f9f9;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
    width: 1125px;
    max-height: 200px; /* 드롭다운의 최대 높이를 설정하여 스크롤 가능하게 함 */
    overflow-y: auto; /* 내용이 많을 경우 스크롤바를 표시 */
    padding: 12px 16px;
    margin-left: 106px;
}

.dropdown label {
    display: block;
    margin: 5px 0;
}

.show {
    display: block;
}

/* 체크박스 그리드 레이아웃 설정 */
.checkbox-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr); /* 5열로 설정 */
    grid-gap: 10px; /* 체크박스 사이 간격 설정 */
}

.checkbox-grid label {
    margin: 0;
}
label:not(.form-check-label):not(.custom-file-label) {
    font-weight: 400;
    color: #232323;
}
.header-area {
	height: 0% !important;	
	}