@charset "UTF-8";

* {
	font-family: pretendard;
}

.search {
	display: flex;
	align-items: center;
	margin-bottom: 20px;
	justify-content: center;
	margin-top: 10px;
}

.search input[type="text"] {
	width: 63%;
	padding: 13px;
	padding-left: 20px;
	font-size: 16px;
	border: 1px solid #ddd;
	border-radius: 5px;
	box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.search button {
	padding: 10px 20px;
	background-color: white;
	border: 1px solid #24D59E; /*민트*/
	color: #1e1e1e;
	border-radius: 5px;
	cursor: pointer;
	margin-left: 20px;
	box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.search button:hover {
	background-color: #24D59E;
	color: white;
}

.result {
	margin-top: 20px;
}

.resultCard {
	display: flex;
	justify-content: space-between;
	padding: 20px;
	background-color: #fff;
	border: 1px solid #ddd;
	border-radius: 10px;
	margin-bottom: 10px;
	width: 1000px;
	box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.resultCard:hover {
	background: #f9f9f9;
}

.profile {
	display: flex;
	align-items: center;
}

.profile img {
	border-radius: 50%;
	width: 65px;
	height: 65px;
	margin-right: 20px;
	margin-top: -33px;
}

.profile-info {
	line-height: 1.5;
}

.profile-info .name {
	font-size: 18px;
	font-weight: bold;
}

.profile-info .details {
	color: #666;
	font-size: 14px;
}

.skills {
	margin-top: 10px;
}

.skill-badge {
	display: inline-block;
	background-color: #e0e0e0;
	border-radius: 5px;
	padding: 5px 10px;
	font-size: 12px;
	margin-right: 5px;
}

.actions {
	display: flex;
	flex-direction: column;
	justify-content: center;
}

.actions button {
	padding: 8px 15px;
	margin-bottom: 10px;
	font-size: 14px;
	border-radius: 5px;
	cursor: pointer;
}

.scout-button {
	background: white;
	color: #24D59E;
	border: 1px solid #24D59E;
}

.scout-button:hover {
	background-color: #24D59E;
	color: white;
}

.profileGo {
	background: white;
	color: #232323;
	border: 1px solid #B5B5B5;
}

.profileGo:hover {
	background: #ECECEC;
	border: 1px solid #B5B5B5;
}

.pagination {
	display: flex;
	justify-content: center;
	margin-top: 20px;
}

.pagination button {
	padding: 10px 15px;
	margin: 0 5px;
	border: 1px solid #ddd;
	background-color: #fff;
	border-radius: 5px;
	cursor: pointer;
}

.pagination button.active {
	background-color: #24D59E;;
	color: white;
}

.pagination button:hover {
	background-color: #ddd;
}

div.contentr {
	background-color: transparent !important; /* 모든 배경색 덮어쓰기 */
	height: 500px !important; /* height를 1200px로 강제 설정 */
	min-height: 500px !important;
}

.wrapper {
	height: 1022px !important;
}

.search {
	/*     position: relative; */
	
}

.downdrop {
	display: none;
	position: absolute;
	top: 15.5%;
	left: 0;
	background-color: #f9f9f9;
	box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
	z-index: 1;
	width: 1125px;
	max-height: 200px; /* 드롭다운의 최대 높이를 설정하여 스크롤 가능하게 함 */
	overflow-y: auto; /* 내용이 많을 경우 스크롤바를 표시 */
	padding: 12px 16px;
	margin-left: 106px;
}

.downdrop label {
	display: block;
	margin: 5px 0;
}

.show {
	display: block;
}

/* 체크박스 그리드 레이아웃 설정 */
.checkbox-grid {
	display: grid;
	grid-template-columns: repeat(5, 1fr); /* 5열로 설정 */
	grid-gap: 10px; /* 체크박스 사이 간격 설정 */
}

.checkbox-grid label {
	margin: 0;
}

label:not(.form-check-label):not(.custom-file-label) {
	font-weight: 400;
	color: #232323;
}

.header-area {
	height: 0% !important;
}

/* 페이징 css 시작*/
.page-link {
	color: black;
	border-radius: 7px;
	margin: 5px;
}
/* 버튼클릭했을 때! */
.page-item.active .page-link {
	z-index: 3;
	font-weight: 700;
	color: #24D59E;
	background-color: rgba(44, 207, 195, 0.11);
	border-radius: 7px;
}

.write_date {
	text-align: right;
}

.page-item.active .page-link {
	border-color: #dee2e6;
}

a.page-link:hover {
	color: #000000;
	background-color: #dee2e6;
}
/* 페이징 css 끝*/

/* 모달 배경 */
.modal {
	display: none; /* 기본적으로 숨김 */
	position: fixed;
	z-index: 1;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	overflow: auto;
	background-color: rgba(0, 0, 0, 0.4); /* 배경 투명도 */
}

/* 모달 콘텐츠 */
.modal-content {
	background-color: #fefefe;
	margin: 5% auto; /* 상단에서 약간의 간격을 주고 중앙 정렬 */
	padding: 35px;
	border: 1px solid #888;
	width: 40%; /* 모달 창의 너비를 줄입니다 (기본값은 80%) */
	max-height: 80%; /* 모달 창의 최대 높이 설정 */
	box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0
		rgba(0, 0, 0, 0.19); /* 그림자 효과 */
}

/* 닫기 버튼 스타일 */
.close {
	color: #aaa;
	float: right;
	font-size: 28px;
	font-weight: bold;
}

.close:hover, .close:focus {
	color: black;
	text-decoration: none;
	cursor: pointer;
}

.close:hover, .close:focus {
	color: black;
	text-decoration: none;
	cursor: pointer;
}
/* 폼 내 각 요소 간의 간격을 늘려줍니다 */
.modal-content form div {
	margin-bottom: 15px; /* 각 입력 필드 간 간격 */
}

/* 입력 필드의 높이를 늘립니다 */
#title, #content, #jobPost {
	width: 100%;
	padding: 10px;
	font-size: 16px;
	box-sizing: border-box; /* padding과 border를 포함한 크기 조정 */
}

#content {
	height: 150px; /* 텍스트 에어리어 높이 증가 */
	resize: vertical; /* 세로 크기 조절 가능 */
}

#file {
	display: block;
	margin-top: 10px;
}

/* 버튼 스타일 조정 */
#cancel-btn, #scoutForm button[type="submit"] {
	padding: 10px 0;
	font-size: 16px;
	cursor: pointer;
	width: 200px;
	height: 50px;
	border-radius: 7px;
}

/* 모달 내 버튼 컨테이너 정렬 */
#scoutForm div:last-child {
	display: flex;
	justify-content: space-between; /* 버튼을 양쪽에 배치 */
}

.scout-title {
	font-size: 23px;
}

#cancel-btn {
	background: white;
	color: #232323;
	border: 1px solid #B5B5B5;
}

#cancel-btn:hover {
	background: #ECECEC;
	border: 1px solid #B5B5B5;
}

#submit-btn {
	background: white;
	border: 1px solid #24D59E;
	color: #24D59E;
	border-radius: 7px;
}

#submit-btn:hover {
	background: #24D59E;
	border: none;
	color: white;
}

#title, #jobPost, #content {
	border: 1px solid #B5B5B5;
	border-radius: 7px;
}

h2 {
	color: #232323;
}

/* 전체 레이아웃 */
.container {
	display: flex;
	justify-content: space-between;
	margin: 0 auto;
	max-width: 1200px;
}

/* 오른쪽 추천 인재 영역 */
.right-sidebar {
	background-color: #f7f7f7;
	padding: 15px;
	border: 1px solid #ddd;
	border-radius: 8px;
}

/* 추천 인재 카드 */
.recommend-card {
	display: flex;
	align-items: center;
	margin-bottom: 15px;
	background-color: #fff;
	border: 1px solid #ddd;
	border-radius: 8px;
	padding: 10px;
	box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.recommend-card img {
	margin-right: 10px;
}

.recommend-info {
	display: flex;
	flex-direction: column;
}

.recommend-info p {
	margin: 0;
}

/* 스크롤 시 추천 인재 고정 */
.right-sidebar {
	position: -webkit-sticky;
	position: sticky;
	top: 200px; /* 페이지 상단에서 떨어진 위치 */
}

h6 {
	color: #232323;
}