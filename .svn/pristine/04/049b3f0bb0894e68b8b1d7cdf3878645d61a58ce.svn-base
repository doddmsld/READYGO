@charset "UTF-8";
* {
    font-family: pretendard;
}
.label{
	font-weight : 200;
}

.edit-control {
    font-size: 14px;
    color: #232323;
    padding: 5px;
    border: 1px solid #666363;
    border-radius: 5px;
    box-sizing: border-box; /* padding과 border를 포함한 크기 계산 */
}

/* form-group의 CSS 수정 */
.form-group {
    display: flex;
    align-items: center;
    margin-bottom: 12px; /* 각 input 그룹 사이의 간격 */
    margin-left : 30px;
    
}

.form-group label {
	font-size: 14px;
    color: #232323;
    margin-right: 40px;
    width: 150px; /* label의 고정 너비 설정 */
    text-align: left; /* label 텍스트를 오른쪽 정렬 */

}

.form-group input {
    flex: 1; /* input이 남은 공간을 차지하게 설정 */
    padding: 8px;
    border: 1px solid #666363;
    border-radius: 5px;
    box-sizing: border-box;
}
