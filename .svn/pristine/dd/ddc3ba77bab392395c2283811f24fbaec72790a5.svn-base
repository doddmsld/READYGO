@charset "UTF-8";
* {
    font-family: pretendard;
}

<style>
@charset "UTF-8";
* {
    font-family: pretendard;
    box-sizing: border-box;
}

/*상세 페이지 전체 */
.detail {
    display: flex;
    flex-direction: column; /* 세로 방향 설정 */
    width: 1100px;
    justify-content: center; /* 가로 가운데 정렬 */
    align-items: center; /* 세로 가운데 정렬 */
    
    margin: 0 auto;
    padding: 20px;
}

/*상품 경로? */
.dettit{
	width: 100%;
}
/*상품 상세 내용 및 가격 내용  */
.detcontent{
	display: flex;
    align-items: flex-start; /* 상단에 맞추어 정렬 */
}

/*상품 상세 내용*/
.left-section {
    flex: 3;
    display: flex;
    flex-direction: column;
    padding: 20px;
}

/*상품 이미지 */
.product-image {
    width: 100%;
    border-radius: 8px;
    margin-bottom: 20px;
}
/*상품 설명 내용 */
.tabs {
    display: flex;
    margin-bottom: 20px;
    border-bottom: 2px solid #EDF5F3;
}

/*상품에 대한 내용 */
.tab-button {
    flex: 1;
    padding: 10px;
    border: none;
    background-color: #EDF5F3;
    cursor: pointer;
    font-size: 16px;
    text-align: center;
}

.tab-button.active {
    background-color: #24D59E;
    color: #fff;
    border-bottom: 2px solid #24D59E;
}

.tab-content {
    margin-top: 20px;
}

/*가격 정보 */

.right-section {
	margin: 20px;
    flex: 1;
    border: 1px solid #EDF5F3;
    padding: 20px;
    border-radius: 8px;
    background-color: #ffffff;
    
}

.service-info hr{
	color: #24D59E;
}
.service-info h3 {
    margin-bottom: 10px;
    font-size: 18px;
    color: #333;
}

.price {
    font-size: 20px;
    color: #24D59E;
    margin: 10px 0;
}

.service-details {
    list-style: none;
    padding: 0;
    margin: 10px 0;
}

.service-details li {
    display: flex;
    justify-content: space-between;
    margin-bottom: 5px;
    font-size: 14px;
}

.purchase-button {
    width: 100%;
    padding: 10px;
    border: none;
    background-color: #24D59E;
    color: white;
    cursor: pointer;
    border-radius: 5px;
    margin-top: 20px;
    font-size: 16px;
    transition: background-color 0.3s;
}

.purchase-button:hover {
    background-color: #1C946E;
}